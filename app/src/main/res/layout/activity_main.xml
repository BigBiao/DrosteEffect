<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    >

        <ImageView
            android:id="@+id/img"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:padding="20dp"
            android:layout_margin="20dp"
            android:background="#cc9f9a9a"/>

        <Button
            android:id="@+id/take_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/edit_image"
            android:background="#ffffff"
            android:text="@string/take_photo"
            android:visibility="gone"/>

        <Button
            android:id="@+id/edit_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ffffff" android:text="@string/edit_image" android:layout_alignBottom="@+id/img"
            android:layout_alignParentEnd="true" android:layout_marginEnd="39dp" android:layout_marginBottom="22dp"/>
        <Button
            android:id="@+id/select_ablum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:text="@string/choose_image"
            android:layout_above="@+id/edit_image" android:layout_alignStart="@+id/edit_image"
            android:layout_marginBottom="33dp"/>
    </RelativeLayout>

</LinearLayout>